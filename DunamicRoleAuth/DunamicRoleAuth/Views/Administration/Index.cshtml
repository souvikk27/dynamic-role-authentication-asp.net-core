@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1>Role Manager</h1>
<form method="post" asp-action="AddRole" asp-controller="Administration">
    <div class="input-group">
        <input name="roleName" class="form-control w-25">
        <span class="input-group-btn">
            <button class="btn btn-info">Add New Role</button>
        </span>
    </div>
</form>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Inline button group">
                    <a class="btn btn-primary btn-sm" href="#">Edit</a> 
                    <form method="post" asp-action="Delete" asp-route-roleName="@role.Name">
                        <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                    </form> 
                    <a asp-controller="Permission" asp-action="Index" asp-route-roleId="@role.Id" class="btn btn-info btn-sm">Manage</a> 
                </div>
                </td>                            
            </tr>
        }
    </tbody>
</table>